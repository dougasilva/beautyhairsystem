<%= simple_form_for @reserva, html: { multipart: true,
                                       class: 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% if current_user.perfil_id == 3 %>
      <%= f.association :cliente, label: 'Cliente:', label_method: :nome,
                        value_method: :id, disabled: true %>
    <% else %>
      <%= f.association :cliente, label: 'Cliente:', label_method: :nome,
                        value_method: :id %>
    <% end %>
    <%= f.association :servico, label: 'Serviço:', label_method: :nome,
                      value_method: :id %>
    <% if current_user.perfil_id == 3 %>
      <%= f.association :profissional, label: 'Profissional:',
                        label_method: :nome, value_method: :id, disabled: true %>
    <% else %>
      <%= f.association :profissional, label: 'Profissional:',
                        label_method: :nome, value_method: :id %>
    <% end %>
    <%= f.input :data, label: 'Data:', as: :date, html5: true %>
    <%= f.input :hora, as: :hour, label: 'Hora:' %>
    <%= f.input :comentarios, label: 'Comentários:' %>
    <%= f.input :realizado, label: 'Realizado:', as: :boolean %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Cadastrar' %>
  </div>
<% end %>
