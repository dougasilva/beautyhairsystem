<div class="container" style="color: black; text-align: center;">
  <p id="notice"><%= notice %></p>

  <h1>Reservas Em Aberto </h1>

  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th style="text-align:center;font-size:16px">Cliente</th>
          <th style="text-align:center;font-size:16px">Qtd. Reservas</th>
          <th style="text-align:center;font-size:16px">Valor</th>
          <th style="text-align:center;font-size:16px" colspan="2">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @reservas.each do |reserva| %>
          <tr>
            <td><%= reserva[1] %></td>
            <td><%= reserva[2] %></td>
            <td><%= number_to_currency(reserva[3], locale: 'pt-BR') %></td>

            <td><%= link_to 'Visualizar',
                            reservas_em_aberto_por_cliente_path(:cliente_id => reserva[0]),
                            :class => "btn btn-primary" %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</br>

  <div class="form-actions" style="color: white">

    <%= link_to 'Voltar', reservas_path, :class => "btn btn-warning" %>

  </div>

</div>
