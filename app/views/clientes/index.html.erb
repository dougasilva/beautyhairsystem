<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data Nascimento</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= l(cliente.data_nascimento, format: :simple) %></td>
        <td><%= cliente.telefone %></td>
        <td><%= cliente.celular %></td>
        <td><%= cliente.email %></td>
        <td><%= link_to 'Exibir', cliente %></td>
        <% if current_user.perfil_id == 1 || current_user.perfil_id == 2 %>
          <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <% end %>
        <% if current_user.perfil_id == 1 %>
          <td><%= link_to 'Excluir', cliente, method: :delete,
                                     data: { confirm: 'Tem certeza?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.perfil_id == 1 || current_user.perfil_id == 2 %>
  <%= link_to 'Novo Cliente', new_cliente_path %>
<% end %>
