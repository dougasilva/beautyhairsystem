<form>

  <div class="container" style="background-color:#C2DFE5">
    <div class="col-md-12">
      <div id="wrapper" style="text-align: center; color: black">
        <h2>Detalhes do Cliente</h2>
      </div>
      <section "Mensagem">
      <p id="notice" style="font-size:16px"><%= notice %></p>
    </section>
    <section "Cliente">
    <div class="col-md-4">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group" style="font-size:16px">
              <label for="@cliente.nome">Nome: </label>
              <%= @cliente.nome %><br>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@cliente.data_nascimento">Nascimento: </label>
              <%= l(@cliente.data_nascimento, format: :simple) %><br>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@cliente.telefone">Telefone: </label>
              <% if @cliente.telefone.length > 0 %>
                <%= format_phone(@cliente.telefone) %>
              <% end %><br>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@cliente.celular">Celular: </label>
              <%= format_cell_phone(@cliente.celular) %>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@cliente.email">Email: </label>
              <% if @cliente.email.length > 0 %>
                <%= @cliente.email %>
              <% end %><br>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@cliente.comentarios">Coment√°rios: </label>
              <%= @cliente.comentarios %><br>
            </div>
          </div>
        </div>
    </div>

  </section>

  </div>
<p><%= link_to 'Voltar', clientes_path, :class => "btn btn-warning" %></p>
</div>

</form>
