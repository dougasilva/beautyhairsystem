<form>

  <div class="container" style="background-color:#C2DFE5">
    <div class="col-md-12">
      <div id="wrapper" style="text-align: center; color: black">
        <h2>Detalhes do Serviço</h2>
      </div>
      <section "Mensagem">
      <p id="notice" style="font-size:16px"><%= notice %></p>
    </section>
    <section "servico">
    <div class="col-md-4">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group" style="font-size:16px">
              <label for="@servico.nome">Nome: </label>
              <%= @servico.nome %><br>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@servico.especialidade.nome">Especialidade: </label>
              <%= @servico.especialidade.nome %><br>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@servico.tempo_estimado">Tempo Estimado: </label>
              <%= @servico.tempo_estimado %>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@servico.preco">Preço: </label>
              <%= number_to_currency(@servico.preco, locale: 'pt-BR') %>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@servico.descricao">Descrição: </label>
              <% if @servico.descricao.length > 0 %>
                <%= @servico.descricao %>
              <% end %><br>
            </div>
          </div>
        </div>
    </div>

  </section>

</div>
<p><%= link_to 'Voltar', servicos_path, :class => "btn btn-warning" %></p>
</div>

</form>
