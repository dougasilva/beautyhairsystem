<%= simple_form_for(@servico) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome, label: 'Nome:' %>
    <%= f.association :especialidade, label: 'Especialidade:',
                      label_method: :nome, value_method: :id %>
    <%= f.input :tempo_estimado, label: 'Tempo Estimado:' %>
    <%= f.input :preco, label: 'Preço:' %>
    <%= f.input :descricao, label: 'Descrição:' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Cadastrar' %>
  </div>
<% end %>
