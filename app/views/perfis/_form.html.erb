<div class="col-md-12">

  <div class="col-md-4">

    <section "Cadastro">

      <%= simple_form_for(@perfil) do |f| %>
        <%= f.error_notification %>
        <div class="form-group">

          <div class="form-inputs">
            <%= f.input :nome, label: 'Nome:' %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, value: 'Salvar', :class => "btn btn-success"%>
            <%= link_to 'Voltar', perfis_path, :class => "btn btn-warning" %>
          </div>

        </div>
      <% end %>

    </section>


  </div>

  
</div>
