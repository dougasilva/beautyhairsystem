<div class="container" style="color: black; text-align: center;">
  <p id="notice"><%= notice %></p>

  <h1> Perfis </h1>

  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th style="text-align:center;font-size:16px">Nome</th>
          <th style="text-align:center;font-size:16px" colspan="3">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @perfis.each do |perfil| %>
          <tr>
            <td><%= perfil.nome %></td>
            <td><%= link_to 'Exibir', perfil,
                                      :class => "btn btn-success" %></td>
            <td><%= link_to 'Editar', edit_perfil_path(perfil),
                                      :class => "btn btn-primary" %></td>
            <% if current_user.perfil_id != perfil.id %>
              <td><%= link_to 'Excluir', perfil, method: :delete,
                                         data: { confirm: 'Tem certeza?' },
                                         :class => "btn btn-danger",
                                         input_html: {id: "del_#{ perfil.nome }"} %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</br>

  <div class="form-actions" style="color: white">

    <%= link_to 'Voltar', reservas_path, :class => "btn btn-warning" %>
    <% if current_user.perfil_id == 1 %>
      <%= link_to 'Novo Perfil', new_perfil_path, :method => :get,
          :class => "btn btn-info" %>
    <% end %>

  </div>

</div>
