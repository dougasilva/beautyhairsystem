<p id="notice"><%= notice %></p>

<h1>Perfis</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perfis.each do |perfil| %>
      <tr>
        <td><%= perfil.nome %></td>
        <td><%= link_to 'Exibir', perfil %></td>
        <% if current_user.perfil_id == 1 %>
          <td><%= link_to 'Editar', edit_perfil_path(perfil) %></td>
          <td><%= link_to 'Excluir', perfil, method: :delete, data:
                                   { confirm: 'Tem certeza?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.perfil_id == 1 %>
  <%= link_to 'Novo Perfil', new_perfil_path %>
<% end %>
