<form>

  <div class="container" style="background-color:#C2DFE5">
    <div class="col-md-12">
      <div id="wrapper" style="text-align: center; color: black">
        <h2>Detalhes do Profissional</h2>
      </div>
      <section "Mensagem">
      <p id="notice" style="font-size:16px"><%= notice %></p>
    </section>
    <section "Cliente">
    <div class="col-md-4">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group" style="font-size:16px">
              <label for="@profissional.nome">Nome: </label>
              <%= @profissional.nome %><br>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@profissional.data_nascimento">Nascimento: </label>
              <%= l(@profissional.data_nascimento, format: :simple) %><br>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@profissional.data_nascimento">Especialidade: </label>
              <% if @profissional.especialidade %>
                <%= @profissional.especialidade.nome %><br>
              <% else %>
                <td><%= %></td>
              <% end %>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@profissional.telefone">Telefone: </label>
              <% if @profissional.telefone.length > 0 %>
                <%= format_phone(@profissional.telefone) %>
              <% end %><br>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@profissional.celular">Celular: </label>
              <%= format_cell_phone(@profissional.celular) %>
            </div>
            <div class="form-group" style="font-size:16px">
              <label for="@profissional.email">Email: </label>
              <% if @profissional.email.length > 0 %>
                <%= @profissional.email %>
              <% end %><br>
            </div>

          </div>
        </div>
    </div>

  </section>

</div>
<p><%= link_to 'Voltar', profissionais_path, :class => "btn btn-warning" %></p>
</div>

</form>
