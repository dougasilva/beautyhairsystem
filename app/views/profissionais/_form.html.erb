<div class="col-md-12">

    <section "Cadastro">

      <%= simple_form_for(@profissional) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">

          <div class="row">
            <div class="form-inputs">
              <div class="col-md-4 col-md-push-1">
                <h3>Dados do Profissional</h3>
                <%= f.input :nome, label: 'Nome:' %>
                <%= f.input :cpf, label: 'CPF:' %>
                <%= f.input :data_nascimento, label: 'Data Nasc.:',
                            as: :date, html5: true %>
                <%= f.association :especialidade, label: 'Especialidade:',
                                  label_method: :nome, value_method: :id %>
                <%= f.input :telefone, label: 'Telefone:' %>
                <%= f.input :celular, label: 'Celular:' %>
                <%= f.input :email, label: 'Email:' %>
              </div>

              <div class="col-md-4 col-md-push-3">
                <h3>Endereço do Profissional</h3>
                <%= f.input :cep, label: 'Cep',
                                  input_html: { id: 'cep',
                                                size: '10', maxlength:'9',
                                                onblur: 'pesquisacep(this.value);' } %>
                <%= f.input :logradouro, label: 'Logradouro', readonly: true,
                                         input_html: { id: 'logradouro',
                                                       size: '60' } %>
                <%= f.input :numero, label: 'Número' %>
                <%= f.input :compl, label: 'Complemento' %>
                <%= f.input :bairro, label: 'Bairro', readonly: true,
                                     input_html: { id: 'bairro', size: '40' } %>
                <%= f.input :cidade, label: 'Cidade', readonly: true,
                                     input_html: { id: 'cidade', size: '40' } %>
                <%= f.input :uf, label: 'UF', readonly: true, input_html: { id: 'uf',
                                                            size: 2,
                                                            maxlength: 2,
                                                            :style=> 'width: 50px' } %>
              </div>

            </div>
          </div>

          <div class="row">
            <div class="form-actions md-4 col-md-push-1">
              <%= f.button :submit, value: 'Salvar', :class => "btn btn-success"%>
              <%= link_to 'Voltar', profissionais_path, :class => "btn btn-warning" %>
            </div>
          </div>

        </div>
      <% end %>

    </section>

</div>
